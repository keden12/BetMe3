<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background"
    tools:context="app.betme.betme.LoggedIn">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/toolbarbackground">

            <EditText
                android:id="@+id/Balance"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#80000000"
                android:drawableStart="@drawable/ic_action_money"
                android:ems="10"
                android:inputType="none"
                android:labelFor="@id/Balance"
                android:textColor="@color/colorMoney"
                tools:text="@string/balance" />

            <EditText
                android:id="@+id/Player"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#80000000"
                android:drawableStart="@drawable/ic_action_user3"
                android:ems="10"
                android:inputType="none"
                android:labelFor="@id/Player"
                android:textColor="@color/colorYellow"
                tools:text="@string/player" />

            <TextView
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:drawableRight="@drawable/ic_action_logoff2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/powerballbutton"
        android:layout_width="2000px"
        android:layout_height="1000px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView"
        app:srcCompat="@drawable/powerball" />

    <ImageButton
        android:id="@+id/megabutton"
        android:layout_width="wrap_content"
        android:layout_height="1000px"
        android:layout_below="@+id/powerballbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/megamillions" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/powerballbutton"
        android:layout_centerHorizontal="true"
        android:text="Currently Supported Lotteries"
        android:textSize="80px" />


</RelativeLayout>
